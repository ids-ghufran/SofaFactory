@model IEnumerable<Domain.Models.Slider>


@{
    Layout = "~/Views/Shared/_Shop_Layout.cshtml";
    ViewData["Title"] = "Index";
}

        <div class="container pt-5">
<div class="card">
    <div class="card-header">
        <p class="my-0 float-right">
            <a class="btn btn-outline-primary" asp-action="Create">Add new Slide</a>
        </p>
    </div>
    <div class="card-body">
            <table class="table border">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            Action Button Link
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BtnLink)
                            </td>
                            <td>
                                <div style="width:200px"><img class="w-100" src="@item.Image.Src" /></div>
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil"></span></a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>