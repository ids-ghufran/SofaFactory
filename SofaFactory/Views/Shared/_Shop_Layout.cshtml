@using SofaFactory.Helper;

@{
    ViewBag.MetaData = !string.IsNullOrEmpty(ViewBag.MetaData) ? ViewBag.MetaData : "Looking for comfortable and stylish furniture? Look no further than Sofa Factory! Our wide selection of sofas, recliners, dining tables, and more will have you feeling like a king or queen.";
    ViewBag.Keywords = !string.IsNullOrEmpty(ViewBag.Keywords) ? ViewBag.Keywords : "Sofa,Recliner, Dining Table,Bed,Center Table,Antique Chair,Rocking Chair";
    ViewBag.BreadcrumbTitle = !string.IsNullOrEmpty(ViewBag.BreadcrumbTitle) ? ViewBag.BreadcrumbTitle : "";
    ViewBag.PageTitle = !string.IsNullOrEmpty(ViewBag.PageTitle) ? ViewBag.PageTitle : "";
    ViewBag.IsHomePage = ViewBag.IsHomePage == null ? false : true;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sofa Factory | @ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaData" >
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="@ViewBag.Keywords">
    <link rel="icon" type="image/xicon" href="./assets/images/favcon.png">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="/assets/plugins/slider/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/new-slider.css">
    <link rel="stylesheet" href="/assets/fontawesome/css/brands.css">
    <link rel="stylesheet" href="/assets/fontawesome/css/solid.css">
    <link rel="stylesheet" href="/assets/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="/assets/vendor/nivo-slider/css/nivo-slider.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    @RenderSection("Styles",false)
</head>
<body>
    <a id="click-to-up"></a>
    <!-- ======================================================================================= -->
    <!-- ----------------whats app fixed positions------------------------------------------------ -->
    <a href="http://wa.me/919371215555" class="float bounce" target="_blank">
        <img src="./assets/images/Whats-App-svg.png" class="my-float" alt="">
        <!-- <i class="fa-brands fa-whatsapp my-float"></i> -->
    </a>
    <section class="slider-section">
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top
                justify-content-between" style="background:#ffffff00">
            <!-- Brand/logo -->
            <div class="d-flex justify-content-around w-100">
                <a class="navbar-brand d-flex justify-content-center"
                   href="/">
                    <img src="/assets/images/logo/SF_LogoPNG2.png"
                         class="sofa-logo" alt="logo">
                </a>

                <button class="sidebar-toggle">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <div class="search-cart-sec  d-md-none d-block" id="show-search-box">
                    <p class="cart-search-icon">
                        <i class="fa fa-search
                                flip-icon"></i>&nbsp;&nbsp;&nbsp;&nbsp; <i class="fa fa-cart-shopping"></i>
                    </p>
                </div>
                <form id="hidden-search-box" class="navbar-form
                        hidden-search-box" role="search">
                    <div class="traingle"></div>
                    <div class="input-group add-on">
                        <input class="form-control addon-text-box"
                               placeholder="Search .........." name="s"
                               type="text">
                        <button type="submit" class="input-group-btn
                                addon-btn">
                            <i class="fa fa-search flip-icon"></i>
                        </button>
                    </div>
                </form>

            </div>

            <aside class="sidebar">
                <div class="sidebar-header">
                    <a href="/">
                        <img src="/assets/images/logo/SF_LogoPNG2.png"
                             class="logo" alt="">
                    </a>
                    <button class="close-btn"><i class="fas fa-times"></i></button>
                </div>

                <ul class="links">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="#">@User.Identity.Name</a></li>
                    }
                    <li><a href="/">Home</a></li>
                    <li><a href="./about.html">About</a></li>

                    <li class="dropdown">
                        <a href="/Products" class="dropdown-toggle"
                           data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            All
                            Products <span class="caret"></span>
                        </a>
                       @* <ul class="dropdown-menu">
                            <li><a href="./sofa.html">Sofa</a></li>
                            <li><a href="./recliner.html">Recliner</a></li>
                            <li><a href="./dining.html">Dining Table</a></li>
                            <li><a href="./center.html">Center Table</a></li>
                            <li><a href="./bed.html">Modern Bed</a></li>
                            <li><a href="./antique-chair.html">Antique Chair</a></li>
                            <li><a href="./relaxing.html">Rocking Chair</a></li>
                            <li><a href="#"> Customization</a></li>
                        </ul>*@
                        @await Component.InvokeAsync("Category")
                    </li>

                    <li><a href="/#category-page">Our Category</a></li>
                    @if (User.Identity.IsAuthenticated && (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.SubAdmin)))
                    {
                    <li><a href="/Categories">All Categories</a></li>
                    <li><a href="/Slider">Home Page Slides</a></li>
                    }

                    <li><a href="./contact.html">Contact</a></li>
                    <li><a href="./store.html">Stores</a></li>
                    <li><a href="./fad-enquiry.html">Franchise & Dealership enquiry</a></li>
                    <li>
                        <a href="https://mail5019.site4now.net/interface/root#/login">
                            Mail
                            &nbsp;&nbsp;  <i class="fa fa-envelope"></i>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {


                        <li><a class="text-danger" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                    }

                </ul>

            </aside>
        </nav>
        @if (ViewBag.IsHomePage)
        {
            <partial name="_slider.cshtml" />
        }
    </section>
    <div style="margin-top: 74px;"></div>
   
        @RenderBody()
   
    
   <partial name="_footer.cshtml" />
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/plugins/scroll-fixed/jquery-scrolltofixed-min.js"></script>
    <script src="/assets/plugins/slider/js/owl.carousel.min.js"></script>
    @*<script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@
    <script src="/assets/js/swiper-bundle.min.js"></script>
    <script src="/assets/vendor/nivo-slider/js/jquery.nivo.slider.js"></script>
    <script src="/assets/vendor/wow/wow.min.js"></script>
    <script src="/assets/js/script.js"></script>
    <script src="/assets/js/app.js"></script>
    @RenderSection("Scripts",false)
</body>
</html>
